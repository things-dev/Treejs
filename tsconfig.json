{
  "compilerOptions": {
    "rootDir": "./src",
    "baseUrl": "./src",
    "outDir": "./dist",
    "module": "esnext",
    "target": "esnext",
    "sourceMap": true,
    "removeComments": true,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "*.test.ts"]
}
