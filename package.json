{
  "name": "@things/treejs",
  "author": "Yuki Shimizu",
  "version": "0.1.0",
  "main": "./cjs/index.js",
  "module": "./esm/index.js",
  "types": "./esm/index.d.ts",
  "description": "Simple Model for manipulating tree structure.",
  "sideEffects": false,
  "keywords": [
    "tree",
    "treemodel",
    "javascript",
    "node",
    "hierarchy",
    "structure"
  ],
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "build": "rm -rf dist && bun run build:cjs && bun run build:esm",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "typecheck": "tsc --pretty --noEmit",
    "format": "biome format ./src --write",
    "check": "biome check ./src",
    "lint": "biome lint ./src",
    "lint:fix": "biome lint --apply ./src",
    "release": "np"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.4.1",
    "@types/bun": "^1.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "np": "^9.2.0",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.ts": ["biome format --write", "biome lint"]
  },
  "files": ["dist", "package.json", "LICENSE", "README.md", "src"]
}
