{
  "name": "@things/treejs",
  "author": "Yuki Shimizu",
  "version": "0.1.0",
  "main": "dist/index.js",
  "description": "",
  "keywords": [
    "tree",
    "treemodel",
    "javascript",
    "node",
    "hierarchy",
    "structure"
  ],
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "build": "rm -rf ./dist && bun build ./src --outfile=./dist/index.js && tsc --emitDeclarationOnly",
    "typecheck": "tsc --pretty --noEmit",
    "format": "biome format ./src --write",
    "check": "biome check ./src",
    "lint": "biome lint ./src",
    "lint:fix": "biome lint --apply ./src",
    "publish": "bun run build && cp package.json dist && cp LICENSE dist && npm publish ./src/dist --access public"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.4.1",
    "@types/bun": "^1.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.ts": ["biome format --write", "biome lint"]
  }
}
